{
    "name": "russsiq/bixbite",
    "type": "project",
    "description": "Система для оперативного развертывания простейших сайтов на shared хостингах на базе Laravel.",
    "keywords": [
        "bixbite",
        "cms",
        "laravel"
    ],
    "license": "MIT",
    "homepage": "https://github.com/russsiq/bixbite",
    "authors": [
        {
            "name": "Рустам Гимранов",
            "email": "rustam_gimranov@mail.ru",
            "homepage": "https://github.com/russsiq",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/russsiq/bixbite"
        }
    ],
    "require": {
        "php": "^8.0",
        "fideloper/proxy": "^4.4",
        "fruitcake/laravel-cors": "^2.0",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "^8.25",
        "laravel/jetstream": "^2.1",
        "laravel/sanctum": "^2.9",
        "laravel/tinker": "^2.6",
        "livewire/livewire": "^2.0",
        "russsiq/laravel-assistant": "^0.2",
        "russsiq/laravel-dom-manipulator": "^0.1",
        "russsiq/laravel-env-manager": "^0.3",
        "russsiq/laravel-grecaptcha": "^0.2",
        "russsiq/laravel-zipper": "^0.2"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.5",
        "facade/ignition": "^2.5",
        "fakerphp/faker": "^1.13",
        "laravel/sail": "^1.3",
        "mockery/mockery": "^1.4",
        "nunomaduro/collision": "^5.3",
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "prestissimo": {
            "maxConnections": 10,
            "minConnections": 3,
            "pipeline": true
        },
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": []
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": [
            "@php artisan config:clear",
            "vendor/bin/phpunit"
        ],
        "test-win": [
            "@php artisan config:clear",
            "vendor\\bin\\phpunit"
        ],
        "testdox": [
            "@php artisan config:clear",
            "vendor\\bin\\phpunit --testdox-html tests/testdox.html"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    }
}
